<table width="95%" border="0" align="center" cellpadding="0" cellspacing="0"
    style="max-width:670px;background:#fff; border-radius:3px; text-align:center;-webkit-box-shadow:0 6px 18px 0 rgba(0,0,0,.06);-moz-box-shadow:0 6px 18px 0 rgba(0,0,0,.06);box-shadow:0 6px 18px 0 rgba(0,0,0,.06);">
    <tr>
        <td style="height:40px;">&nbsp;</td>
    </tr>
    <tr>
        <td style="padding:35px; width: 100%">
            <div class="main-container" style="width: 100%; height:100%;">
                <div style="position: relative; width: 100%">
                    <h1
                        style="color:#1e1e2d; margin:10px;font-size:35px; font-weight: 300; font-family:'Rubik',sans-serif; text-transform: capitalize;">
                        Accuvend: Receipt for Airtime Purchase<span style="text-transform: capitalize;">
                        </span>
                    </h1>
                </div>
                <div style="width: 100%">
                    <div>
                        <div
                            style="width: 100%; display: flex; flex-direction: row; padding: 10px 0; border-bottom: 1px solid grey;">
                            <p style="font-size: 15px; font-weight: 300; margin-right: auto; color: grey">Transaction
                                reference</p>
                            <p style="font-size: 15px; font-weight: 500; text-align: right; font-style: bold;">
                                <%= transaction.bankRefId %>
                            </p>
                        </div>
                        <div
                            style="width: 100%; display: flex; flex-direction: row; padding: 10px 0; border-bottom: 1px solid grey;">
                            <p style="font-size: 15px; font-weight: 300; margin-right: auto; color: grey">Amount</p>
                            <p style="font-size: 15px; font-weight: 500; text-align: right; font-style: bold;">
                                <%=transaction.amount.toString().replace( /\B(?=(\d{3})+(?!\d))/g, "," )%>
                            </p>
                        </div>
                    
                        <div
                            style="width: 100%; display: flex; flex-direction: row; padding: 10px 0; border-bottom: 1px solid grey;">
                            <p style="font-size: 15px; font-weight: 300; margin-right: auto; color: grey">Disco</p>
                            <p style="font-size: 15px; font-weight: 500; text-align: right; font-style: bold;">
                                <%=transaction.disco %>
                            </p>
                        </div>

                        <div
                            style="width: 100%; display: flex; flex-direction: row; padding: 10px 0; border-bottom: 1px solid grey;">
                            <p style="font-size: 15px; font-weight: 300; margin-right: auto; color: grey">Phone number</p>
                            <p style="font-size: 15px; font-weight: 500; text-align: right; font-style: bold;">
                                <%=phoneNumber %>
                            </p>
                        </div>
                        
                        <div
                            style="width: 100%; display: flex; flex-direction: row; padding: 10px 0; border-bottom: 1px solid grey;">
                            <p style="font-size: 15px; font-weight: 300; margin-right: auto; color: grey">Date</p>
                            <p style="font-size: 15px; font-weight: 500; text-align: right; font-style: bold;"><%= transaction.transactionTimestamp.toString().split(` (`)[0] %> </p>
                        </div>
                    </div>
                       
                </div>
                
            </div>
        </td>
    </tr>
    <tr>
        <td style="height:40px;">&nbsp;</td>
    </tr>
</table>